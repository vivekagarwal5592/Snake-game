<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="vivz.snakesnake.Start"
    tools:showIn="@layout/activity_page_0"
    android:weightSum="1"
    android:id = "@+id/mLinearlayout">


    <vivz.snakesnake.Drawing_board
        android:id="@+id/signature_canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#FFFFFF"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text = "Down"
        android:id = "@+id/down"
        android:src="@drawable/down"
        android:layout_alignTop="@+id/right"
        android:layout_toRightOf="@+id/left"
        android:layout_toEndOf="@+id/left" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text = "Right"
        android:id = "@+id/right"
        android:src="@drawable/right"
        android:layout_alignBottom="@+id/signature_canvas"
        android:layout_toRightOf="@+id/down"
        android:layout_toEndOf="@+id/down" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id = "@+id/left"
        android:src="@drawable/left"
        android:layout_alignTop="@+id/down"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width = "50dp"
        android:layout_height = "50dp"
        android:text = "Up"
        android:id = "@+id/up"
        android:src="@drawable/up"
        android:layout_above="@+id/down"
        android:layout_toRightOf="@+id/left"
        android:layout_toEndOf="@+id/left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/par"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/score"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        />

</RelativeLayout>
